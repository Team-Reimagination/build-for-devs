<theme folder="desktop/ui/">
    <!-- WINDOW!! !-->
    <captionActive          path="caption"          textColor="#FFFFFF" left="5" top="30" right="5" bottom="5" textSize="16" />
    <captionInactive        path="captionInactive"  textColor="#AAFFFFFF" left="5" top="30" right="5" bottom="5" />
    <captionButtons         path="captionButtons"   size="21,21" margin="2,0" offset="4,6" />
    <window                 color="255,255,255"     textColor="0,0,0"   font="file://C:/Windows/fonts/tahoma.ttf"    fontSize="11"/>

    <!-- BUTTONS !-->
    <normalButton           path="button"           textColor="0,0,0"       left="4" top="4" right="4" bottom="4" />
    <hoverButton            path="buttonHover"      textColor="0,0,0"       left="4" top="4" right="4" bottom="4" />
    <pressedButton          path="buttonPressed"    textColor="0,0,0"       left="4" top="4" right="4" bottom="4" />
    <disabledButton         path="buttonDisabled"   textColor="128,128,128" left="4" top="4" right="4" bottom="4" />

    <!-- CHECKBOX -->
    <checkbox               path="checkbox"         width="16"              height="16"/>

    <!-- TABS -->
    <tabBackground          path="tabBody"          textColor="0,0,0"           left="4" top="0" right="4" bottom="4" />
    <tabButtonSelected      path="tab"              textColor="255,255,255"     left="4" top="4" right="4" bottom="0" />
    <tabButtonUnselected    path="tabNonSelected"   textColor="0,0,0"           left="4" top="6" right="4" bottom="4" />
    <tabButtonHover         path="tabHover"         textColor="0,0,0"           left="4" top="4" right="4" bottom="4" />
    <tabButtonPressed       path="tabPressed"       textColor="0,0,0"           left="4" top="4" right="4" bottom="4" />

    <!-- CONTEXT MENU -->
    <contextBackground      path="context"          textColor="0,0,0"           left="4" top="4" right="4" bottom="4" />
    <contextOption          path="contextOption"    textColor="255,255,255"     height="20" />

    <!-- MENU BAR -->
    <menuBar                path="menuBar"          height="20" />

    <!-- TEXTBOX -->
    <textbox                path="textbox"          textColor="0,0,0"           left="4" top="4" right="4" bottom="4" />
    <textboxHover           path="textboxHover"     textColor="0,0,0"           left="4" top="4" right="4" bottom="4" />
    <textboxPressed         path="textboxPressed"   textColor="0,0,0"           left="4" top="4" right="4" bottom="4" />
    <textboxFocused         path="textboxFocus"     textColor="0,0,0"           left="4" top="4" right="4" bottom="4" />
</theme>